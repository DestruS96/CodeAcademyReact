let raceNumber = Math.floor(Math.random() * 1000);

var runnerRegisteredEarly = true;

var runnerAge = 17;

if (runnerAge >= 18 && runnerRegisteredEarly === true) {
  raceNumber += 1000;
}

if (runnerAge >= 18 && runnerRegisteredEarly === true) {
  console.log(`Early adults race at 9:30am and your race number is ${raceNumber}`);
} else if (runnerAge > 18 && runnerRegisteredEarly === false) {
  console.log(`Late adults race at 11:00am and your race number is ${raceNumber}`);
} else if (runnerAge < 18) {
  console.log(`Youth registrants run at 12:30 pm (regardless of registration) and your race number is ${raceNumber}`);
} else {
  console.log("Please go to the registration desk")
}
